        <volume>
              <property>sim/sound/effects/volume</property>
        </volume>
        <reference-dist>10</reference-dist>
        <max-dist>100</max-dist>
    </fgpassengers> 
    <fgpassengers>
        <name>CPL Mayday</name>
        <path>FGPassengers/Sounds/crew/cpl_mayday.wav</path>
        <mode>once</mode>
        <type>avionics</type>
        <property>/fgpassengers/emergency/mayday</property>
        <volume>
              <property>sim/sound/effects/volume</property>
        </volume>
        <reference-dist>10</reference-dist>
        <max-dist>100</max-dist>
    </fgpassengers> 
    <fgpassengers>
        <name>CPL Mayday Done</name>
        <path>FGPassengers/Sounds/crew/cpl_maydaydone.wav</path>
        <mode>once</mode>
        <type>avionics</type>
        <property>/fgpassengers/emergency/mayday</property>
        <volume>
              <property>sim/sound/effects/volume</property>
        </volume>
        <reference-dist>10</reference-dist>
        <max-dist>100</max-dist>
    </fgpassengers> 
    <fgpassengers>
        <name>Crew Welcome Onboard</name>
        <path>FGPassengers/Sounds/crew/crew1_welcomeonboard.wav</path>
        <mode>once</mode>
        <property>/fgpassengers/sound/crew/welcomeonboard</property>
        <volume>
              <property>sim/sound/effects/volume</property>
        </volume>
        <position>
            <x>-35.0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>50</reference-dist>
        <max-dist>100</max-dist>
